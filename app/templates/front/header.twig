{% extends "layout.twig" %}

{% block header %}
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Front Header</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                {% for nav in ['login', 'join', 'admin1', 'admin2', 'logout'] %}
                    <li class="nav-item {% if nav == action %}active{% endif %}">
                        <a class="nav-link" href="/index.php?action={{ nav }}"> {{ nav }}
                            {% if nav == action %}<span class="sr-only">(current)</span>{% endif %}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </nav>
{% endblock %}


